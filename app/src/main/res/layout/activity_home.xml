<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">


        <Button
            android:id="@+id/logoutbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            />

        <TextView
            android:id="@+id/usernameDisplay"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="24dp"/>

        <Button
            android:id="@+id/viewProjects"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Projects"/>

    </LinearLayout>


    <Button
        android:id="@+id/changeUserType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change user type"/>

    <Button
        android:id="@+id/createProject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Project"/>

    <Button
        android:id="@+id/deleteProject"
        android:text="Delete Project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/addUserToProjectBtn"
        android:text="Add user to project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/removeUserFromProjectBtn"
        android:text="Remove user from project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <CalendarView
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>